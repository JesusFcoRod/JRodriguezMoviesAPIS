@model ML.Cine
@{
    ViewData["Title"] = "CinesGetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CINES</h1>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h5>Seleccione un Cine para editar  o presione "Agregar para registrar una nuevos"</h5>
            <hr />
        </div>
    </div>
</div>


<div style="float:right;">
    @Html.ActionLink("Agregar", "Form", "Cine", htmlAttributes: new { @class = "btn btn-success" })
</div>

<br />
<br />

<table class="table table-hover table-striped table-bordered table-responsive" id="table_usuarios">
    <thead>
        <tr class="table-secondary">
            <td>Editar</td>
            <td style="display :none;">id</td>
            <td>Latitud</td>
            <td>Longitud</td>
            <td>Descripcion</td>
            <td>Venta</td>
            <td>Zona</td>
            <td>Eliminar</td>

        </tr>
    </thead>

    <tbody>
        @foreach (ML.Cine cine in Model.Cines)
        {
            <tr>
                <td style="text-align: center; vertical-align: middle;"><a class="btn btn-warning glyphicon  glyphicon glyphicon-cog" href="@Url.Action("Form", "Cine", new { IdCine = cine.IdCine })"><i class="bi bi-pencil-square" style="color: ivory"></i></a></td>
                <td style="display :none;">@cine.IdCine </td>
                <td>@cine.Latitud</td>
                <td>@cine.Longitud</td>
                <td>@cine.Descripcion</td>
                <td>@cine.Venta</td>
                <td>@cine.Zona</td>


                <td style="text-align: center; vertical-align: middle;"><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Cine", new { IdCine = cine.IdCine})" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"><i class="bi bi-eraser-fill" style="color: mintcream"></i></a></td>
            </tr>
        }

    </tbody>
</table>



